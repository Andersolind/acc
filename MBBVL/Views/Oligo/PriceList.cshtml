@{
    ViewBag.Title = "Price List";
}

<script src="~/js/Angular/Controller/PriceListCtrl.js"></script>
<h2>Price List</h2>
<div ng-app="acgt" ng-controller="PriceList">
    <p>Unmodified research-grade oligonucleotides less than 72 bases</p>



    <table class="table table-striped table-hover">

        <tbody>
            <tr><th>Scale (µmole)</th><th>Price (/base)</th><th>Recommended # of bases</th></tr>
            <tr><td>0.02</td><td>$0.29</td><td id="">10 - 50 bases</td></tr>
            <tr style="background-color: rgb(212, 227, 229);"><td>0.04</td><td>$0.50</td><td>10 - 72 bases</td></tr>
            <tr><td>0.2</td><td>$1.00</td><td id="">10 - 72 bases</td></tr>
            <tr><td>1.0</td><td>$3.00</td><td>10 - 72 bases</td></tr>
        </tbody>
    </table>
    <p>Unmodified research-grade oligonucleotides longer than 72 bases:</p>
    <table class="table table-striped table-hover">
        <tbody>
            <tr><th>Scale (µmole)</th><th>Price (/base)</th></tr>
            <tr><td>0.2</td><td>$1.50</td></tr>
            <tr><td>1.0</td><td>$3.00</td></tr>
        </tbody>
    </table>
    <p>Unmodified research-grade degenerate oligonucleotides:</p>
    <table class="table table-striped table-bordered table-hover table-condensed">
        <tbody>
            <tr><th>Scale (µmole)</th><th>Price (/base)</th></tr>
            <tr><td>0.2</td><td>$1.50</td></tr>
            <tr><td>1.0</td><td>$3.00</td></tr>
        </tbody>
    </table>

    <div class="row">
        <div class="col-md-3">
            <label for="ddlCategory">Select Scale</label>

            <select id="sel" class="input-block-level" ng-model="list_category" ng-options="obj.id as obj.name for obj in list_categories.data" ng-change="createCalculations(list_category)">
                <option value="">Other</option>
            </select>

        </div>
        <div class="col-md-3" >
            <label for="ddlPurification">Select Purification</label>

            <select id="list_purifucation" class="input-block-level" ng-model="list_purifi" ng-options="color.name for color in list_purification" ng-change="createPurificationCost(list_purifi)"></select>

        </div>
        <div class="col-md-4">
            <label for="ddlNumber of basis">Enter # of Bases</label>

            <input type="text" ng-model="txtNumberOfBases" ng-change="oligoSynthesisCalculation(txtNumberOfBases)" />
        </div>

    </div>
    <div class="row">
        <table class="table table-striped table-bordered table-hover table-condensed">
            <tbody>
                <tr><th>Price Per Base</th><th>Oligo Synthesis Cost</th><th>Purification Cost</th></tr>
                <tr><td><input type="text" ng-model="pricePerBase" /></td><td><input type="text" ng-model="oligoSynthesisCost" /></td><td><input type="text" ng-model="purificationCost" /></td></tr>

            </tbody>
        </table>
        <div class="col-md-4">
            <label for="ddlNumber of basis">Total</label>

            <input type="text" ng-model="txtTotal"  />
        </div>
    </div>
</div>