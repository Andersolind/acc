<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Markham Business Sports League</title>

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/Bootstrap/Anders")
    @Styles.Render("~/Content/themes/base/css")
    <link href="~/Content/Bootstrap/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Bootstrap/Site.css" rel="stylesheet" />
    <link href="~/Content/Bootstrap/simple-sidebar.css" rel="stylesheet" />
    <script type="text/javascript">

        $(document).ready(function () {

            $('.dropdown-toggle').dropdown();
            $("#menu-toggle").click(function (e) {
                e.preventDefault();
                $("#wrapper").toggleClass("active");
            });
        });

    </script>

</head>
    <body class="bg">
        <div class="bg">
            <div id="wrapper">
              
                                <!-- Sidebar -->
                <div id="sidebar-wrapper">
                    <ul class="sidebar-nav">
                        <li class="sidebar-brand"><img src="~/Content/Images/logo3.png" />
                           
                        </li>

                        <li>
                            @Html.ActionLink("About", "About", "Home")
                        </li>
                        <li>
                            @Html.ActionLink("Contact Us", "Contact", "Home")
                        </li>
                        <li>
                            @Html.ActionLink("Maps", "Maps", "Home")
                        </li>
                        <li>
                            @Html.ActionLink("Team Information", "TeamInfo", "Dashboard")
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle">Rules <b class="caret"></b></a>
                            <ul class="dropdown-menu">

                                <li>@Html.ActionLink("League Info", "LeagueInfo", "Home")</li>

                                <li>@Html.ActionLink("Volleyball League Rules", "Vbrules", "Home")</li>

                                <li>@Html.ActionLink("Baseball League Rules", "BaseballRules", "Home")</li>

                            </ul>

                        </li>
                        <hr />
                        @Html.Partial("_LoginPartial")
                    </ul>
                </div>

                <!-- Page content -->
                <div id="page-content-wrapper">
                    <div class="content-header">
                        <h1>
                            <a id="menu-toggle" href="#" class="btn btn-default"><i class="icon-reorder"></i></a>
                            Markham Business Baseball Volleyball League
                        </h1>
                    </div>
                    <!-- Keep all page content within the page-content inset div! -->
                    <div class="page-content inset">
                        <div class="row">
                            <div class="col-md-12">
                                @RenderBody()
                            </div>

                        </div>
                    </div>
                </div>
                <footer>
                    <div class="foot-fixed-bottom">
                        <div class="container">
                            <hr />
                            © Markham Business Baseball Volleyball League •  2014
                        </div>
                    </div>
                </footer>
            </div>
            </div>
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)
    </body>
</html>
